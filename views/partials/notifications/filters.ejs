<!-- Notification Filters -->
<div class="mt-3 mb-3" id="notification-filters" style="display: none;">
  <h5>Filtrer notifikationer</h5>
  
  <!-- Faner for forskellige filtertyper -->
  <ul class="nav nav-tabs" id="filterTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general-filters" type="button" role="tab">Generelt</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="presence-tab" data-bs-toggle="tab" data-bs-target="#presence-filters" type="button" role="tab">Brugerstatus</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="evaluation-tab" data-bs-toggle="tab" data-bs-target="#evaluation-filters" type="button" role="tab">Evalueringer</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="queues-tab" data-bs-toggle="tab" data-bs-target="#queues-filters" type="button" role="tab"><%= t.queues || 'Køer' %></button>
    </li>
  </ul>
  
  <!-- Fanernes indhold -->
  <div class="tab-content border border-top-0 p-3 bg-white">
    <!-- Generelle Filtre -->
    <div class="tab-pane fade show active" id="general-filters" role="tabpanel">
      <div class="form-group mb-3">
        <label for="filter-user-search">Søg efter bruger:</label>
        <input type="text" class="form-control" id="filter-user-search" placeholder="Indtast navn...">
      </div>
      
      <div class="form-check form-switch mb-3">
        <input class="form-check-input" type="checkbox" id="show-only-online-users">
        <label class="form-check-label" for="show-only-online-users">Vis kun logget på brugere</label>
      </div>
      
      <h6 class="mt-4">Notifikationstyper:</h6>
      <div class="form-check mb-2">
        <input class="form-check-input filter-topic" type="checkbox" id="filter-topic-presence" data-topic="presence" checked>
        <label class="form-check-label" for="filter-topic-presence">
          Brugerstatusser
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-topic" type="checkbox" id="filter-topic-evaluations" data-topic="quality.evaluations" checked>
        <label class="form-check-label" for="filter-topic-evaluations">
          Kvalitetsevalueringer
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-topic" type="checkbox" id="filter-topic-queues" data-topic="routing.queues.statistics" checked>
        <label class="form-check-label" for="filter-topic-queues">
          Kø-statistik
        </label>
      </div>
    </div>
    
    <!-- Brugerstatusfiltre -->
    <div class="tab-pane fade" id="presence-filters" role="tabpanel">
      <div class="form-check mb-2">
        <input class="form-check-input filter-status" type="checkbox" id="filter-presence-available" data-status="available" checked>
        <label class="form-check-label" for="filter-presence-available">
          <span class="status-indicator status-available"></span> <%= t.statusAvailable || 'Tilgængelig' %>
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-status" type="checkbox" id="filter-presence-busy" data-status="busy" checked>
        <label class="form-check-label" for="filter-presence-busy">
          <span class="status-indicator status-busy"></span> <%= t.statusBusy || 'Optaget' %>
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-status" type="checkbox" id="filter-presence-away" data-status="away" checked>
        <label class="form-check-label" for="filter-presence-away">
          <span class="status-indicator status-away"></span> <%= t.statusAway || 'Væk' %>
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-status" type="checkbox" id="filter-presence-break" data-status="break" checked>
        <label class="form-check-label" for="filter-presence-break">
          <span class="status-indicator status-away"></span> <%= t.statusBreak || 'Pause' %>
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-status" type="checkbox" id="filter-presence-meal" data-status="meal" checked>
        <label class="form-check-label" for="filter-presence-meal">
          <span class="status-indicator status-away"></span> <%= t.statusMeal || 'Frokost' %>
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-status" type="checkbox" id="filter-presence-meeting" data-status="meeting" checked>
        <label class="form-check-label" for="filter-presence-meeting">
          <span class="status-indicator status-busy"></span> <%= t.statusMeeting || 'Møde' %>
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-status" type="checkbox" id="filter-presence-training" data-status="training" checked>
        <label class="form-check-label" for="filter-presence-training">
          <span class="status-indicator status-busy"></span> <%= t.statusTraining || 'Træning' %>
        </label>
      </div>
      <div class="form-check mb-2">
        <input class="form-check-input filter-status" type="checkbox" id="filter-presence-offline" data-status="offline">
        <label class="form-check-label" for="filter-presence-offline">
          <span class="status-indicator status-offline"></span> <%= t.statusOffline || 'Offline' %>
        </label>
      </div>
    </div>
    
    <!-- Evalueringsfiltre -->
    <div class="tab-pane fade" id="evaluation-filters" role="tabpanel">
      <div class="mb-3">
        <label for="filter-score-range" class="form-label">Score interval:</label>
        <div class="d-flex align-items-center">
          <span id="min-score-label">0%</span>
          <input type="range" class="form-range mx-2" id="filter-score-range" min="0" max="100" value="0">
          <span id="max-score-label">100%</span>
        </div>
      </div>
      
      <div class="form-group mb-3">
        <label for="filter-evaluator-search">Søg efter evaluator:</label>
        <input type="text" class="form-control" id="filter-evaluator-search" placeholder="Indtast navn...">
      </div>
    </div>
    
    <!-- Kø-filtre -->
    <div class="tab-pane fade" id="queues-filters" role="tabpanel">
      <div class="form-group mb-3">
        <label for="filter-queue-search"><%= t.searchQueues || 'Søg efter køer' %>:</label>
        <input type="text" class="form-control" id="filter-queue-search" placeholder="<%= t.searchQueues || 'Søg efter køer' %>...">
      </div>
      
      <div class="mb-3">
        <label for="filter-min-waiting" class="form-label"><%= t.minWaitingContacts || 'Min. ventende kontakter' %>:</label>
        <input type="range" class="form-range" id="filter-min-waiting" min="0" max="50" value="0">
        <div class="d-flex justify-content-between">
          <span id="min-waiting-value">0</span>
          <span>50</span>
        </div>
      </div>
      
      <div class="form-check form-switch mb-3">
        <input class="form-check-input" type="checkbox" id="show-all-queues" checked>
        <label class="form-check-label" for="show-all-queues"><%= t.showAllQueues || 'Vis alle køer' %></label>
      </div>
      
      <div id="queues-list" class="mb-3">
        <p class="text-muted"><%= t.selectQueues || 'Vælg køer' %>...</p>
        <!-- Queue checkboxes will be populated dynamically -->
      </div>
    </div>
  </div>
  
  <button class="btn btn-sm btn-outline-secondary mt-2" id="reset-filters">Nulstil filtre</button>
</div>